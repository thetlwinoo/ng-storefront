{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "es2015",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "paths": {
            "@angular/*": [
                "node_modules/@angular/*"
            ],
            "@box": [
                "@box/"
            ],
            "@app/env": [
                "environments/environment"
            ],
            "@app/root-state/*": [
                "app/state/*"
            ],
            "@app/root-state": [
                "app/state/index"
            ],
        },
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ]
    }
}